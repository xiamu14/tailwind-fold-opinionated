// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "out": true
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "hide-files.files": [],
    "tailwind-fold.foldStyle": "QUOTES",
    "tailwind-fold.autoFold": true,
    "tailwind-fold.foldLengthThreshold": 0,
    "tailwind-fold.foldedText": "",
    "tailwind-fold.foldedTextBackgroundColor": "#ffffff00",
    "tailwind-fold.unfoldIfLineSelected": true
}